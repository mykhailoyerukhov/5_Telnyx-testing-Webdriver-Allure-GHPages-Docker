  "devDependencies": {
    "@wdio/allure-reporter": "^9.4.3",
    "@wdio/cli": "^9.4.3",
    "@wdio/local-runner": "^9.4.3",
    "@wdio/mocha-framework": "^9.4.3",
    "@wdio/spec-reporter": "^9.4.3",
    "@wdio/visual-service": "^6.2.5",
    "mocha": "^11.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "webdriverio": "^9.4.3"
  }
}
